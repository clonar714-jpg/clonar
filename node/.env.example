# Copy to .env and fill in your keys. Never commit .env.

PORT=4000
NODE_ENV=development

# Required for query flow
OPENAI_API_KEY=your_openai_key
PERPLEXITY_API_KEY=your_perplexity_key

# Optional: SerpAPI for product/hotel search (else SQL/local providers)
SERP_API_KEY=

# Optional: Google Maps for hotel search
GOOGLE_MAPS_API_KEY=
GOOGLE_MAPS_BACKEND_KEY=

# Optional: TMDB for movies (if used)
TMDB_API_KEY=

# Optional: Supabase (if you add auth/db back)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
JWT_SECRET=

# Optional: Redis for session cache
REDIS_URL=redis://localhost:6379
